<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/first_page_title">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mainpage_machine_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/first_page_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="西始工业超市"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/mainpage_title_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="在线智能仓库"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/mainpage_sub_title_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:layout_marginLeft="@dimen/manager_padding_left_right"
        android:layout_marginRight="@dimen/manager_padding_left_right"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_getproduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_manager"
            android:layout_marginTop="70dp"
            android:background="@drawable/selector_btn_dialog"
            android:minHeight="@dimen/min_height"
            android:text="取货"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/big_text_size"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_borrow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_manager"
            android:layout_marginTop="70dp"
            android:background="@drawable/selector_btn_dialog"
            android:minHeight="@dimen/min_height"
            android:text="借货"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/big_text_size"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_manager"
            android:layout_marginTop="70dp"
            android:background="@drawable/selector_btn_dialog"
            android:minHeight="@dimen/min_height"
            android:text="还货"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/big_text_size"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_middle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_versiondesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="30dp"
            android:text="版本: 1.0.0"
            android:textSize="@dimen/mainpage_bottom_text_size" />


        <TextView
            android:id="@+id/btn_manage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/selector_btn_dialog"
            android:gravity="center"
            android:minHeight="@dimen/min_height"
            android:text="管理"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/mainpage_bottom_text_size" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="30dp"
            android:layout_toLeftOf="@id/btn_manage"
            android:layout_toRightOf="@id/tv_versiondesc"
            android:gravity="center"
            android:textSize="@dimen/mainpage_bottom_text_size" />


    </RelativeLayout>
</RelativeLayout>