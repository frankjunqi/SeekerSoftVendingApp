<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cradnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_return_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cradnumber"
        android:layout_marginTop="40dp"
        android:text="还货..."
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_errordesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_readcard"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_return_mainpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/big_text_size"
        android:minHeight="@dimen/min_height"
        android:text="返回首页" />

    <ImageView
        android:id="@+id/iv_readcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_return_goods"
        android:layout_centerHorizontal="true"
        android:src="@drawable/read_card" />
</RelativeLayout>